<div class="container-fluid">
    <h1 class="text-center main-heading">{{title}}</h1>
    <br />
    <div class="row mx-auto">
        <div class="col-3-md col-sm"></div>
        <div class="col-6-lg col-6-md col-12-sm list-width">
            <div class=" container-fluid">
                <div class="list-group">
                    {{#each coinData}}
                    <a href="{{url}}" class="list-group-item d-flex list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center">
                                <img class="logo" src="{{image}}" alt="{{symbol}}logo">
                                <h4 class="mb-1">{{name}}</h4>
                            </div>
                            <div class="d-flex flex-column">
                                <p class="mb-1 align-self-end">{{symbol}}</p>
                                <p class="mb-1 align-self-end">${{localeString value}}</p>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-3-md col-sm"></div>
    </div>
</div>